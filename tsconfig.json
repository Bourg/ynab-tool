{
  "include": [
    "app.config.ts",
    "app/**/*",
    "generated/**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowJs": false,
    "strict": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "paths": {
      "~/*": [
        "./app/*"
      ]
    }
  }
}